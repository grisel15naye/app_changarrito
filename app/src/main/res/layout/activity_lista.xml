<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo02"
    android:orientation="vertical"
    tools:context=".MainLista">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:background="#9C0128FF"
                    android:text="LISTA DE COMPRAS"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="38sp" />

                <ListView
                    android:id="@+id/listaCompras"
                    android:layout_width="match_parent"
                    android:layout_height="359dp"
                    android:layout_marginBottom="20dp"
                    android:background="#DCFFE503" />

                <TextView
                    android:id="@+id/TotalPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="#DDFFE503"
                    android:text="Total: s/0"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnBorrarProductos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#95FF0101"
                    android:text="Borrar Lista de Productos"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnAtras03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#A4FF9800"
                    android:text="Ir al Menu"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnPagar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#A60026FF"
                    android:text="Realizar Pago"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>